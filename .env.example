# Trading Bot Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_USER_ID=your_telegram_user_id_here
TELEGRAM_CHANNEL_ID=@your_channel_id_here

# Pocket Option Configuration  
POCKET_OPTION_EMAIL=your_pocket_option_email
POCKET_OPTION_PASSWORD=your_pocket_option_password
POCKET_OPTION_SSID=your_session_id_here

# Trading Configuration
MAX_DAILY_LOSS_PERCENTAGE=10.0
MAX_RISK_PER_TRADE_PERCENTAGE=2.0
MIN_SIGNAL_ACCURACY=95.0
MIN_AI_CONFIDENCE=85.0

# API Keys (if using external data sources)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
QUANDL_API_KEY=your_quandl_key

# Database Configuration
DATABASE_ENCRYPTION_KEY=your_32_character_encryption_key

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Production/Development Mode
ENVIRONMENT=development
DEBUG_MODE=true